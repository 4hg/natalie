require_relative '../spec_helper'

describe 'thread' do
  describe '#new' do
    it 'creates a new Thread and runs it' do
      result = nil
      thread = Thread.new { result = 1000 }
      thread.should be_kind_of(Thread)
      thread.join.should == thread
      thread.join.should == thread
      thread.value.should == 1000
      thread.value.should == 1000
      result.should == 1000
    end
  end
end
